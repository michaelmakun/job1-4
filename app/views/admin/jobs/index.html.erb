<div class="pull-right">
  <%= link_to("增加职位", new_admin_job_path, :class => "btn btn-primary btn-xs") %>
</div>

<br><br>

<table class="table table-boldered">
  <thead>
    <tr>
      <th>职位</th>
      <th>管理选项</th>
      <th>发布时间</th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= link_to(job.title, admin_job_path(job)) %></td>
        <td>
          <%= link_to("编缉", edit_admin_job_path(job), :class => "btn btn-success btn-xs") %>
          <%= link_to("删除", admin_job_path(job), :method => :delete, :class => "btn btn-danger btn-xs", :data => { :confirm => "Are you sure?"}) %>
        </td>
        <td><%= job.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
